<Window x:Class="Lab04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Height="320" Width="700" Background="DarkBlue" Margin="50" HorizontalAlignment="Center">
                <StackPanel Margin="50">
                    <Label HorizontalAlignment="Center" FontSize="30" FontFamily="Consolas" FontStyle="Oblique" Foreground="White" FontWeight="Bold">CONSULTAS</Label>
                    <Label FontWeight="Bold" HorizontalAlignment="Center">Escoja una opción:</Label>
                    <Button Width="120" Height="30" Margin="5" Background="Aquamarine" FontWeight="Bold" Click="Button_Click">Productos</Button>
                    <Button Width="120" Height="30" Margin="5" Background="Aquamarine" FontWeight="Bold" Click="Button_Click_1">Categorías</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
