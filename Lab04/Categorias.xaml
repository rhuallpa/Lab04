<Window x:Class="Lab04.Categorias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab04"
        mc:Ignorable="d"
        Title="Categorias" Height="450" Width="800">
    <Grid>
        <StackPanel Height="450" Width="800" Background="DarkBlue" HorizontalAlignment="Center" Margin="0">
            <Label HorizontalAlignment="Center" FontSize="30" FontFamily="Consolas" FontStyle="Oblique" Foreground="White" FontWeight="Bold">LISTADO DE CATEGORIAS</Label>
            <Button Background="Aquamarine" FontWeight="Bold" Foreground="White" Click="Button_Click">Salir</Button>

            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <Grid>
                    <DataGrid x:Name="dataGridCategorias" Height="800" />
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
